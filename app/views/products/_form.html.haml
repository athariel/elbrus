= form_for @product, html: { class: "form form-horizontal product" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :standard_measure, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :standard_measure, class: 'form-control', required: true
    = f.error_span(:standard_measure)
  .form-group
    = f.label :calories, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :calories, class: 'form-control', required: true
    = f.error_span(:calories)
  .form-group
    = f.label :carbohydrate, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :carbohydrate, class: 'form-control', required: true
    = f.error_span(:carbohydrate)
  .form-group
    = f.label :protein, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :protein, class: 'form-control', required: true
    = f.error_span(:protein)
  .form-group
    = f.label :fat, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :fat, class: 'form-control', required: true
    = f.error_span(:fat)
  .form-group
    = f.label :roughage, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :roughage, class: 'form-control', required: true
    = f.error_span(:roughage)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), products_path, :class => 'btn btn-default'
