- Dish = Dish
- content_for :page_header do
  =t '.title', :default => Dish.model_name.human.titleize

%p
  %strong= Dish.human_attribute_name(:name) + ':'
  %br
  = @dish.name


= link_to t('.back', :default => t("helpers.links.back")), dishes_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_dish_path(@dish), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), dish_path(@dish), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
