%h1.text-center.title
  Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'validate-form' }) do |f|
  = devise_error_messages!
  .form-group
    .controls.with-icon-over-input
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'E-mail', 'data-rule-required': true
      %i.icon-user.text-muted
  .form-group
    .controls.with-icon-over-input
      = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control', 'data-rule-required': true
      %i.icon-lock.text-muted
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)      
  .form-group
    .controls.with-icon-over-input
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Password confirmation"
      %i.icon-lock.text-muted
  = f.submit "Sign up", class: 'btn btn-block'
= render "devise/shared/links"
