%h1.text-center.title
  Resend confirmation instructions
= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'validate-form' }) do |f|
  .form-group
    .controls.with-icon-over-input
      = f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control', placeholder: 'E-mail', 'data-rule-required': true
      %i.icon-user.text-muted
  = f.submit "Resend confirmation instructions", class: 'btn btn-block'
= render "devise/shared/links"
