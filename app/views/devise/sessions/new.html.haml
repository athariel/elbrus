%h1.text-center.title
  Log in
= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'validate-form' }) do |f|
  = flash_messages
  .form-group
    .controls.with-icon-over-input
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'E-mail', 'data-rule-required': true
      %i.icon-user.text-muted
  .form-group
    .controls.with-icon-over-input
      = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control', 'data-rule-required': true
      %i.icon-lock.text-muted
  - if devise_mapping.rememberable?
    .checkbox
      %label{for: 'remember_me'}
        = f.check_box :remember_me
        Remember me
  = f.submit "Log in", class: 'btn btn-block'
= render "devise/shared/links"
