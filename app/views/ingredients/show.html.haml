- content_for :page_header do
  =t '.title', :default => Ingredient.model_name.human.titleize

%p
  %strong= Ingredient.human_attribute_name(:product_id) + ':'
  %br
  = @ingredient.product_id
%p
  %strong= Ingredient.human_attribute_name(:measurement_id) + ':'
  %br
  = @ingredient.measurement_id
%p
  %strong= Ingredient.human_attribute_name(:amount) + ':'
  %br
  = @ingredient.amount
%p
  %strong= Ingredient.human_attribute_name(:dish_id) + ':'
  %br
  = @ingredient.dish_id


= link_to t('.back', :default => t("helpers.links.back")), ingredients_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_ingredient_path(@ingredient), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), ingredient_path(@ingredient), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
