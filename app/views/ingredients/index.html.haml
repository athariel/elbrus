- content_for :page_header do
  =t '.title', :default => Ingredient.model_name.human(count: 2).titleize
%table.table.table-striped
  %thead
    %tr
      %th= Ingredient.human_attribute_name(:id)
      %th= Ingredient.human_attribute_name(:product_id)
      %th= Ingredient.human_attribute_name(:measurement_id)
      %th= Ingredient.human_attribute_name(:amount)
      %th= Ingredient.human_attribute_name(:dish_id)
      %th= Ingredient.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @ingredients.each do |ingredient|
      %tr
        %td= link_to ingredient.id, ingredient_path(ingredient)
        %td= ingredient.product_id
        %td= ingredient.measurement_id
        %td= ingredient.amount
        %td= ingredient.dish_id
        %td=l ingredient.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_ingredient_path(ingredient), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), ingredient_path(ingredient), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_ingredient_path, :class => 'btn btn-primary'
